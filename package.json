{
  "name": "lumen",
  "version": "1.0.0",
  "description": "Illuminate your reading journey with AI-powered insights",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.lumen.app",
    "productName": "Lumen",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.png",
      "target": ["dmg"],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCalendarsUsageDescription": "Lumen needs access to your calendar to display upcoming events and meetings in the app."
      }
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "scripts/**/*"
    ],
    "asarUnpack": [
      "scripts/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "date-fns": "^2.30.0",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0"
  }
}
